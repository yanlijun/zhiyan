{
  "globals": {
    "jQuery": true,      // can use jQuery function
    "layer": true,        // can use layer function
    "BMap": true         // can use BMap function
  },
  "boss": true, // true: Require all defined variables be used e.g. if(a = 0) code
  "curly": true, // true: Require {} for every new block or scope
  "eqeqeq": true, // true: Require triple equals (===) for comparison
  "eqnull": true, // true: Requires all functions run in ES5 Strict Mode
  "expr": true,
  "immed": true, // true: Require immediate invocations to be wrapped in parens e.g. `(function () { } ());`
  "newcap": true, // true: Require capitalization of all constructor functions e.g. `new F()`
  "noempty": true,
  "noarg": true, // true: Prohibit use of `arguments.caller` and `arguments.callee`
  "undef": true, // true: Require all non-global variables to be declared (prevents global leaks)
  "regexp": true,
  "browser": true,
  "devel": true,
  "node": true // {int} Max depth of nested blocks (within functions)

  //"sub": true, // true: Prohibit use of empty blocks e.g. aaa.bbb not aaa['bbb']
  //"latedef": true, // true: Require variables/functions to be defined before being used
  //"es3": true, // {int} Max number of formal params allowed per function
  //"-W117": true // {int} Max number statements per function
}
